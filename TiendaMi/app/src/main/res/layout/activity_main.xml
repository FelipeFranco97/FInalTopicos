<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sebas.tutolab.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="210dp"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="206dp" />

        <Button
            android:id="@+id/btSignIn"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etEmail"
            android:layout_below="@+id/etPassword"
            android:layout_marginTop="13dp"
            android:text="SIGN IN"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="340dp" />

        <Button
            android:id="@+id/btRegister"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btSignIn"
            android:layout_alignBottom="@+id/btSignIn"
            android:layout_alignEnd="@+id/etEmail"
            android:layout_marginEnd="20dp"
            android:text="REGISTER"
            tools:layout_editor_absoluteX="210dp"
            tools:layout_editor_absoluteY="340dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="email"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="151dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/aclonica"
            android:text="TiendaMi"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="34sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
